// Running LED Bouncing (ESP - IDF) 
// Timer 250 ms
//#include <Arduino.h>
#define LED_COUNT 8
gpio_num_t ledPins[LED_COUNT] = {GPIO_NUM_2, 
GPIO_NUM_4, GPIO_NUM_5, GPIO_NUM_18, 
GPIO_NUM_19, GPIO_NUM_21, GPIO_NUM_22, 
GPIO_NUM_23};
int currentLed = 0;
bool direction = true; // true = gerakan ke kanan, false 
= gerakan ke kiri
hw_timer_t *timer = NULL;
void IRAM_ATTR onTimer() {
 gpio_set_level(ledPins[currentLed], LOW); // Matikan 
LED saat ini
 if (direction) {
 currentLed++; // Pindah ke LED berikutnya
 if (currentLed >= LED_COUNT) {
 currentLed = LED_COUNT - 2;
 direction = false;
 }
 } else {
 currentLed--; // Pindah ke LED sebelumnya
 if (currentLed < 0) {
 currentLed = 1;
 direction = true;
 }
 }
 gpio_set_level(ledPins[currentLed], HIGH); // 
Nyalakan LED baru
}
extern "C" void app_main(){
 for (int i = 0; i < LED_COUNT; i++) {
 pinMode(ledPins[i], OUTPUT);
 }
 // Set up timer
 timer = timerBegin(0, 80, true); // Gunakan timer 0, 
prescaler 80, 1 tick = 1 Âµs
 timerAttachInterrupt(timer, &onTimer, true); // 
Lampirkan fungsi ISR
 timerAlarmWrite(timer, 500000, true); // Set alarm 
setiap 500ms
 timerAlarmEnable(timer); // Aktifkan timer
 while (1){
 // Main program loop, nothing to do here
 }
