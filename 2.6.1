//Running LED with Delay 500ms by Arduino IDE
#define LED_COUNT 8

// Array untuk menyimpan pin LED
const int ledPins[LED_COUNT] = {2, 4, 5, 18, 19, 21, 22, 23};

int delay_time = 500; // Delay time dalam milidetik

void setup() {
  // Mengatur mode pin LED sebagai output
  for (int i = 0; i < LED_COUNT; i++) {
  pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  // Menyalakan LED secara berurutan
  for (int i = 0; i < LED_COUNT; i++) {
  digitalWrite(ledPins[i], HIGH); // Menyalakan LED
  delay(delay_time); // Menunggu delay_time
  digitalWrite(ledPins[i], LOW); // Mematikan LED
  }
}
